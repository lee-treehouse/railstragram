<div class="card" style="width: 25rem;"  id="<%= dom_id post %>">
  <div class="card-header bg-white">
    <div class="d-flex justify-content-between">
      <div>
        <%if post.user.profile_picture.attached? %>
          <%=image_tag post.user.profile_picture, class:"img-thumbnail rounded-circle", style: "width:10%"%>
        <%else%>
          <%= image_tag("user-pp.png", class:"img-thumbnail rounded-circle", style: "width:10%")%>
        <%end%>
        <span class="fw-bold mx-2"><%=post.user.username%></span>
      </div>
      <div>
        <div class="dropdown">
          <a class="text-dark" style="text-decoration:none" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            ...
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="#">Edit</a></li>
            <li><a class="dropdown-item" href="#">Delete</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%=image_tag post.images.last, class:"card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%=post.caption%></h5>
  </div>
  <div class="card-footer">footer</div>
</div>
